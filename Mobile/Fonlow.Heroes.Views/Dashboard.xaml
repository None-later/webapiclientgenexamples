<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fonlow.Heroes.Views.Dashboard"
             xmlns:viewsNS="clr-namespace:Fonlow.Heroes.Views"
             xmlns:vmNS="clr-namespace:Fonlow.Heroes.VM;assembly=Fonlow.Heroes.VM.Android"
>
    <!--<ContentView.BindingContext>
        <vmNS:HeroesVM/>//Parent component will inject the BindingContext
    </ContentView.BindingContext>-->
    <ContentView.Content>
        <StackLayout>
            <ListView x:Name="HeroesListView" ItemsSource="{Binding Items}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Name}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <viewsNS:HeroesView x:Name="heroesView" BindingContext="{Binding}">
            </viewsNS:HeroesView>
        </StackLayout>
    </ContentView.Content>
</ContentView>